:root{--bg:#0b0f14;--ink:#e8f2ff;--primary:#19b5ff;--muted:#9fb0c6;--stroke:rgba(25,181,255,.18)}*{box-sizing:border-box}body{margin:0;font:16px/1.6 system-ui;background:var(--bg);color:var(--ink)}.topbar{display:flex;justify-content:space-between;align-items:center;padding:10px 16px;border-bottom:1px solid var(--stroke);background:#0f141b}.brand{font-weight:800;letter-spacing:.5px;color:var(--primary)}.lang .lang-btn{margin-left:8px;padding:6px 10px;border:1px solid var(--stroke);background:#0e141a;color:var(--ink);border-radius:8px;cursor:pointer}.lang .lang-btn.active{background:var(--primary);color:#02141f;border-color:transparent}.hero{text-align:center;padding:72px 20px;background:#0f141b}.hero h1{font-size:34px;margin:0 0 8px}.hero .subtitle{color:var(--muted)}.btn{display:inline-block;margin-top:14px;padding:12px 18px;background:var(--primary);color:#02141f;text-decoration:none;border-radius:10px;font-weight:700}.btn.ghost{background:transparent;color:var(--ink);border:1px solid var(--stroke)}.features{display:grid;grid-template-columns:repeat(auto-fit,minmax(220px,1fr));gap:16px;padding:28px 20px;max-width:980px;margin:auto}.features div{background:#0f141b;border:1px solid var(--stroke);border-radius:12px;padding:18px}.cta{text-align:center;padding:48px 20px}.cta-actions{display:flex;gap:10px;justify-content:center;flex-wrap:wrap}footer{text-align:center;padding:20px;color:var(--muted);border-top:1px solid var(--stroke)}
